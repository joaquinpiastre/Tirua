// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  nombre        String
  apellido      String
  email         String    @unique
  password      String
  dni           String    @unique
  telefono      String?
  rol           String    @default("socio")
  nombreAlumno  String?   // Nombre del niño/alumno (para socios); búsqueda por maestro y admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payments      Payment[]
  clasesComoAlumno  ClaseAlumno[]
  asistencias   Asistencia[]
  clasesComoMaestro Clase[]    @relation("MaestroClases")

  @@map("users")
}

model Payment {
  id             String    @id @default(uuid())
  userId         String
  monto          Float     @default(0)
  estado         String    @default("pendiente")
  fechaPago      DateTime?
  mes            Int?
  ano            Int?
  esManual       Boolean   @default(false)
  observaciones  String?
  mpPreferenceId String?   @unique
  mpPaymentId    String?   @unique
  mpStatus       String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, mes, ano])
  @@map("payments")
}

model Clase {
  id        String   @id @default(uuid())
  nombre    String
  maestroId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  maestro   User     @relation("MaestroClases", fields: [maestroId], references: [id], onDelete: Cascade)
  alumnos   ClaseAlumno[]
  asistencias Asistencia[]

  @@map("clases")
}

model ClaseAlumno {
  id      String   @id @default(uuid())
  claseId String
  userId  String   // User (socio) - se muestra nombreAlumno
  clase   Clase    @relation(fields: [claseId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([claseId, userId])
  @@map("clase_alumnos")
}

model Asistencia {
  id      String   @id @default(uuid())
  claseId String
  userId  String   // alumno (socio) que asistió
  fecha   DateTime // fecha de la clase
  clase   Clase    @relation(fields: [claseId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([claseId, userId, fecha])
  @@map("asistencias")
}



